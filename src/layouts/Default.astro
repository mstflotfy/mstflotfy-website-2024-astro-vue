---
import "../styles/css-resets/resets.css";
import "../styles/figma/colors.css";
import "../styles/figma/fonts.css";
import "../styles/figma/elevation.css";
import "../components/NavigationMenu.vue";
import "../styles/types.css"
import NavigationMenu from "../components/NavigationMenu.vue";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
}
const {
  title = "mstflotfy",
  description = "Building & Exploring Tools For SelfMastery, by Mostafa Lotfy (mstflotfy)",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!--Not sure this is effective/needed?-->
    <link
      rel="preload"
      href="/fonts/Freehand/Freehand-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <title>{title}</title>
  </head>
  <body>
    <NavigationMenu client:load />
    <slot />
  </body>
</html>
